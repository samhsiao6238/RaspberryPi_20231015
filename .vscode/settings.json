{
    "cSpell.ignorePaths": [
        "**/node_modules/**",  // 忽略 node_modules
        "**/dist/**",          // 忽略 dist 資料夾
        "**/**"          // 忽略壓縮檔案
    ],
    "cSpell.enableFiletypes": [
        "!markdown",
        "!python"
    ],
    // 添加字彙
    "cSpell.words": [
        // 可將特殊命名字串加入
        "myfunction", "mysource", "mytarget", "dateutil",
        "boto3", "gettz", "timestr", "zipf", "ipynb",
        "arcname", "botocore", "voclab", "elif", "TMQTT",
        "miservice", "aiohttp", "aiofiles", "venv"
    ],
    // 設定貼上相片的預設路徑
    "pasteImage.path": "${currentFileDir}/images/",
    // 圖片前綴
    "pasteImage.namePrefix": "img_",
    // 預設名稱
    "pasteImage.defaultName": "0",
    // 已經存在就彈出視窗自訂名稱
    "pasteImage.showFilePathConfirmInputBox": true,
    // flake8 長度
    "flake8.args": [
        // 取消長度
        "--max-line-length=200",
        // 取消首行必須是 import 的規定
        "--ignore=E402"
        // 要取消的其他項目程式碼，以逗號相隔即可
        // "--ignore=E501, E402"
    ],
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // 全局縮排設置
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    // 專門為 Markdown 文件設置縮排
    "[markdown]": {
        "editor.tabSize": 4
    },
    // 設定 Python language server 為 Microsoft 的 Pylance
    "python.languageServer": "Pylance",
}