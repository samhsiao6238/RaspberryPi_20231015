{
    "cSpell.enableFiletypes": [
        "!markdown",
        "!python"
    ],
    // 添加字彙
    "cSpell.words": [
        // 可將特殊命名字串加入
        "myfunction", "mysource", "mytarget", "dateutil",
        "boto3", "gettz", "timestr", "zipf", "ipynb",
        "arcname", "botocore", "voclab", "elif", "TMQTT"
    ],
    // 設定貼上相片的預設路徑
    "pasteImage.path": "${currentFileDir}/images/",
    // 圖片前綴
    "pasteImage.namePrefix": "img_",
    // 預設名稱
    "pasteImage.defaultName": "0",
    // 已經存在就彈出視窗自訂名稱
    "pasteImage.showFilePathConfirmInputBox": true,
    // flake8 長度
    "flake8.args": [
        // 取消長度
        "--max-line-length=200",
        // 取消首行必須是 import 的規定
        "--ignore=E402"
        // 要取消的其他項目程式碼，以逗號相隔即可
        // "--ignore=E501, E402"
    ],
    "[yaml]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // 全局縮排設置
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    // 專門為 Markdown 文件設置縮排
    "[markdown]": {
        "editor.tabSize": 4
    },
    // 設定 Python language server 為 Microsoft 的 Pylance
    "python.languageServer": "Pylance",
    "indentRainbow.colors": [
        "rgba(255,69,0,0.1)",  // 第一層
        "rgba(255,140,0,0.1)", // 第二層
        "rgba(34,139,34,0.1)", // 第三層
        "rgba(0,0,255,0.1)"    // 第四層
    ],
    // 當縮排不一致時顯示的錯誤顏色
    "indentRainbow.errorColor": "rgba(128,32,32,0.8)",
    // 忽略特定警告
    "python.analysis.diagnosticSeverityOverrides": {
        "reportMissingImports": "none"
    }
}